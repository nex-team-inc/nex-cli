// Workspace settings
{
    // The following will hide the js and map files in the editor
    "files.exclude": {
        ".direnv": true,
        ".DS_Store": true,
        "*.egg-info": true,
        "**/__pycache__": true,
        "/tmp": true,
        "/workspace": true,
        "dist": true,
        "nexcli/.venv/*": true,
        "Thumbs.db": true
    },
    "cSpell.words": [
        "direnv",
        "envrc",
        "execv",
        "imgops",
        "nexcli",
        "pipx",
        "pyproject",
        "RGBA",
        "tomlkit"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "search.exclude": {
        ".DS_Store": true,
        "Thumbs.db": true,
        "__pycache__": true,
        ".direnv": true,
        "*.egg-info": true,
        "/tmp": true,
        "/workspace": true,
        "dist": true,
        "nexcli/.venv/*": true
    },
    "markdownFormatter.fullWidthTurnHalfWidth": "auto",
    "markdownFormatter.formatOpt": {
        "indent_size": 2
    },
    "[markdown]": {
        // auto save
        "editor.formatOnSave": true,
        // show space
        "editor.renderWhitespace": "all",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        },
        "editor.snippetSuggestions": "top",
        "editor.tabCompletion": "on",
        "editor.acceptSuggestionOnEnter": "on",
        "editor.defaultFormatter": "mervin.markdown-formatter"
      }
}