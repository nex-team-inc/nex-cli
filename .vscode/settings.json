// Workspace settings
{
    // The following will hide the js and map files in the editor
    "files.exclude": {
        ".DS_Store": true,
        "Thumbs.db": true,
        "__pycache__": true,
        ".direnv": true,
        "*.egg-info": true,
        "/tmp": true,
        "/workspace": true,
        "dist": true,
        "nexcli/.venv/*": true
    },
    "cSpell.words": [
        "direnv",
        "envrc",
        "execv",
        "imgops",
        "nexcli",
        "pipx",
        "pyproject",
        "RGBA"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "search.exclude": {
        ".DS_Store": true,
        "Thumbs.db": true,
        "__pycache__": true,
        ".direnv": true,
        "*.egg-info": true,
        "/tmp": true,
        "/workspace": true,
        "dist": true,
        "nexcli/.venv/*": true
    }
}